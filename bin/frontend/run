#! /usr/bin/bash

ABS_PATH=$(readlink -f "$0")
BACKEND_PATH=$(dirname $ABS_PATH)
BIN_PATH=$(dirname $BACKEND_PATH)
PROJECT_PATH=$(dirname $BIN_PATH)

# Copy and Run on CLI
docker run --rm \
--publish 3000:3000 \
--env REACT_APP_ENVOY_URL="https://8000-${GITPOD_WORKSPACE_ID}.${GITPOD_WORKSPACE_CLUSTER_HOST}" \
--env REACT_APP_BACKEND_URL="https://4567-${GITPOD_WORKSPACE_ID}.${GITPOD_WORKSPACE_CLUSTER_HOST}" \
--env REACT_APP_OTLP_COLLECTOR_URL="https://4318-${GITPOD_WORKSPACE_ID}.${GITPOD_WORKSPACE_CLUSTER_HOST}/v1/traces" \
--env REACT_APP_AWS_PROJECT_REGION="${AWS_DEFAULT_REGION}" \
--env REACT_APP_AWS_COGNITO_REGION="${AWS_DEFAULT_REGION}" \
--env REACT_APP_AWS_USER_POOLS_ID="us-east-1_0CO30Fiti" \
--env REACT_APP_CLIENT_ID="6nnngfmk148v7pm9l86q7bv011" \
-it frontend-react-js-prod